# Environment Configuration
# Copy this file to .env and update the values as needed

# API Security
# Set to 'development' to bypass security for local testing
# Set to 'production' to enforce API key authentication
ENVIRONMENT=development

# RapidAPI Configuration (for production)
RAPIDAPI_PROXY_SECRET=your_secret_key_here

# Application Settings
APP_NAME=DevUtility API Vault
APP_VERSION=1.0.0
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# NLTK Data Path (optional - defaults to system location)
NLTK_DATA=/home/user/nltk_data